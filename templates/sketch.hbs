<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="viewport" content="width=660">
  <title>Sketchbook | {{currentSketch}}</title>
  <meta property="og:title" content="{{currentSketch}}">
  <meta property="og:site_name" content="sketchbook.arlo.me">
  <meta property="og:url" content="https://sketchbook.arlo.me/sketch/{{currentSketch}}">
  <meta property="og:description" content="Sketch for {{currentSketch}}">
  <meta property="og:type" content="object">
  <meta property="og:image" content="https://sketchbook.arlo.me/thumbnails/{{currentSketch}}.png">
  <link rel="stylesheet" href="/styles/styles.css">
  <style>
    body {
      display: grid;
      grid-template-columns: 1fr 12ch;
    }
    nav {
      grid-column-start: 2;
      grid-column-end: 3;
      grid-row-start: 2;
      grid-row-end: 3;
      justify-self: end;
      padding-right: 1em;
    }

    header {
      grid-column-start: 1;
      grid-column-end: 2;
      grid-row-start: 2;
      grid-row-end: 3;
      padding-left: 1em;
    }

    main {
      grid-column-start: 1;
      grid-column-end: 3;
      grid-row-start: 1;
      grid-row-end: 2;
      padding-bottom: 1.2rem;
    }
    @media (min-width: 661px) {
      nav, header {
        padding: 0;
      }
    }
  </style>
  {{#if local}}
  <!-- RSS LINK GOES HERE -->
  {{else}}
  <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="//sketchbook.arlo.me/feed.rss">
  {{/if}}
</head>

<body>
  <header>
    <h1 class="large">
      {{currentSketch}}
      <a href="https://github.com/arlodesign/sketchbook/blob/master/sketches/{{currentSketch}}.js" aria-label="View the code for this sketch on GitHub.">
        <svg class="icon" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
          <path d="M15.999 0C7.164 0 0 7.163 0 16c0 7.07 4.584 13.066 10.942 15.182.8.147 1.092-.347 1.092-.771 0-.38-.013-1.386-.021-2.721-4.45.966-5.39-2.145-5.39-2.145-.728-1.849-1.777-2.34-1.777-2.34-1.452-.993.11-.973.11-.973 1.606.113 2.451 1.649 2.451 1.649 1.427 2.445 3.745 1.738 4.657 1.329.145-1.033.559-1.739 1.015-2.138-3.552-.404-7.288-1.777-7.288-7.908 0-1.747.624-3.176 1.647-4.294-.165-.404-.714-2.032.158-4.234 0 0 1.342-.43 4.399 1.64A15.325 15.325 0 0 1 16 7.737a15.33 15.33 0 0 1 4.006.54c3.055-2.071 4.395-1.641 4.395-1.641.874 2.202.325 3.83.16 4.234 1.026 1.118 1.645 2.547 1.645 4.294 0 6.146-3.741 7.499-7.305 7.895.574.494 1.085 1.47 1.085 2.963 0 2.138-.02 3.864-.02 4.389 0 .428.29.926 1.1.77C27.42 29.06 32 23.068 32 16c0-8.838-7.164-16-16.001-16"
            fill="currentColor" fill-rule="evenodd" />
        </svg>
      </a>
    </h1>
    {{#if description}}
    <p>{{description}}</p>
    {{/if}}
  </header>
  <main class="frame" id="my-canvas"></main>
  <nav>
    <div class="pagination">
      {{#if prevSketch}}
      <a href="/sketch/{{prevSketch}}" class="large" aria-label="{{prevSketch}}">←</a>
      {{else}}<span class="large" aria-hidden="true">←</span>
      {{/if}}
      <a class="large" href="/#link-{{currentSketch}}" aria-label="Index" title="Index">↑</a>
      {{#if nextSketch}}
      <a href="/sketch/{{nextSketch}}" class="large" aria-label="{{nextSketch}}">→</a>
      {{else}}<span class="large" aria-hidden="true">→</span>
      {{/if}}
    </div>
  </nav>
  <script>
    window.drawingComplete = false;
  </script>
  <script src="/js/p5.min.js"></script>
  <script src="/js/lib.js"></script>
  <script src="/js/{{currentSketch}}.js"></script>
  {{#if local}}
  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io();
    socket.on('update', msg => location.reload());
  </script>
  {{/if}}
</body>

</html>